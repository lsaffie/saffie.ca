.margin_padding_5px
  =form_for([@post,@comment]) do |f| 
    %table
      %tr
        %td
          Name:
          %br
          =f.text_field :name
      %tr
        %td
          Comment:
          %br
          =f.text_area :body, :size => '40x5'
          .hidden
            =f.text_field :bot_check
      %tr
        %td
          =submit_tag 'Post!'
